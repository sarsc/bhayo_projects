<%= simple_form_for(@project) do |f|%>
  <%= f.input :name %>
  <%= f.input :client %>
  <%= f.input :description %>
  <%= f.input :category, as: :select, collection: ["Landscape and Interior design", "Urban planning and Corporate", "Events and Festivals"]%>
  <%= f.submit "Add project", class: "btn btn-primary" %>
<% end %>
